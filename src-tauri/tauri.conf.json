{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EyeMotion",
  "version": "1.1.0",
  "identifier": "com.eyemotion.app",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [{
      "title": "EyeMotion",
      "width": 1600,
      "height": 900,
      "resizable": false,
              "fullscreen": true,
              "decorations": false,
              "visible": false,
              "transparent": false,
              "backgroundColor": "#0F172A"
    }],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
