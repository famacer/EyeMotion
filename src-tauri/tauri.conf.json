{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EyeMotion",
  "version": "1.0.0",
  "identifier": "com.eyemotion.app",
  "build": {
    "frontendDist": "../ui",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [{
      "title": "EyeMotion",
      "width": 800,
      "height": 600,
      "resizable": true,
      "fullscreen": true,
      "decorations": false,
      "visible": true
    }],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "android": {
      "minSdkVersion": 24
    },
    "ios": {
      "minimumSystemVersion": "12.0"
    }
  }
}
